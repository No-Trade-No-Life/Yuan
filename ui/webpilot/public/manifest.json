{
  "manifest_version": 3,
  "name": "WebPilot",
  "version": "1.0.0",
  "description": "Chrome extension for AI auto manipulation of web content",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "scripting",
    "userScripts"
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebPilot"
  }
}
