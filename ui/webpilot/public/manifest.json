{
  "manifest_version": 3,
  "name": "WebPilot",
  "version": "1.0.0",
  "description": "Chrome extension for web content injection and network monitoring",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "scripting",
    "userScripts"
  ],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebPilot"
  }
}
